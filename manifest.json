{
  "name": "Thomann Davachki",
  "description": "An extension for Chrome that display the \"davachki\" from Thomann to Makedonija.",
  "version": "1.0",
  "manifest_version": 3,
	"permissions": ["tabs", "activeTab", "scripting"],
	"host_permissions": [
		"*://*.thomann.de/*"
	],
	"content_scripts": [
    {
      "matches": ["*://*.thomann.de/*"],
      "js": ["main.js"]
    }
  ],
	"action": {
    "default_popup": "popup.html",
		"default_icon": {
      "16": "/images/icon_16.png",
      "32": "/images/icon_32.png",
      "48": "/images/icon_48.png",
			"64": "/images/icon_64.png",
      "128": "/images/icon_128.png"
    }
  }
}